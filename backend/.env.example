# Environment Variables for Deployment

# Django Settings
SECRET_KEY=your-super-secret-key-generate-a-new-one
DEBUG=False
ALLOWED_HOSTS=your-app-name.onrender.com,localhost

# MongoDB Atlas Connection
MONGODB_URI=mongodb+srv://username:password@cluster.xxxxx.mongodb.net/agathees_db?retryWrites=true&w=majority

# PostgreSQL (Render will provide DATABASE_URL)
# DATABASE_URL=postgres://user:password@host:port/dbname

# Frontend URL for CORS
CORS_ALLOWED_ORIGINS=https://your-frontend-app.vercel.app

# OpenAI API (optional, for AI task analysis)
OPENAI_API_KEY=your-openai-api-key
